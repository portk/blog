<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.blog.mapper.UserMapper">
    <select id="select" resultType="java.util.Map">
        SELECT * FROM user
    </select>
    <select id="selectByCode" resultType="java.util.Map">
        SELECT * FROM user WHERE code=#{code}
    </select>
    <select id="selectById" resultType="java.util.Map">
        SELECT * FROM user WHERE id LIKE #{id}
    </select>
    <insert id="insert">
        INSERT INTO user(id,pw) VALUES(#{id},#{pw})
    </insert>
    <update id="update">
        UPDATE user SET id=#{id}, pw=#{pw} WHERE code=#{code}
    </update>
    <update id="updateNickname">
        UPDATE user SET nickname=#{nick} WHERE code=#{code}
    </update>
    <update id="updateEmail">
        UPDATE user SET email=#{email} WHERE code=#{code}
    </update>
    <delete id="delete">
        DELETE FROM user WHERE code=#{code}
    </delete>
</mapper>